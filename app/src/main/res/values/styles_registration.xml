<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="RegistrationEditText">
        <item name="android:textColor">@color/white_1000</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/grey_300</item>
        <item name="android:ems">10</item>
        <item name="android:backgroundTint">@color/white_1000</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="RegistrationButton">
        <item name="android:textColor">@color/white_1000</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@color/light_green_500</item>
    </style>

    <style name="RegistrationSwapText">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:background">@color/light_green_500_50</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>