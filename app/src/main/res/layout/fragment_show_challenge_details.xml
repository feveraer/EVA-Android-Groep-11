<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.groep11.eva_app.ui.fragment.ShowChallengeDetailsFragment"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/text_challenge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge.title"
            style="@style/DetailsTitleText" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_challenge_image"
            android:layout_width="@dimen/circleview_radius_tall"
            android:layout_height="@dimen/circleview_radius_tall"
            app:civ_border_width="0dp"
            style="@style/DetailsCircleView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_marginTop="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_tiny">

            <ImageView
                android:layout_width="@dimen/dotted_left_width"
                android:layout_height="@dimen/dotted_left_height"
                android:layout_marginRight="@dimen/spacing_small"
                android:paddingLeft="@dimen/spacing_gigantic"
                android:src="@drawable/dotted"
                style="@style/DetailsDottedLine"/>

            <ImageView
                android:layout_width="@dimen/image_small"
                android:layout_height="@dimen/image_small"
                android:src="@drawable/leaf"
                android:id="@+id/image_leaf_1"
                android:contentDescription="@string/details.leaf.description" />

            <ImageView
                android:layout_width="@dimen/image_small"
                android:layout_height="@dimen/image_small"
                android:src="@drawable/leaf"
                android:id="@+id/image_leaf_2"
                android:contentDescription="@string/details.leaf.description" />

            <ImageView
                android:layout_width="@dimen/image_small"
                android:layout_height="@dimen/image_small"
                android:src="@drawable/leaf"
                android:id="@+id/image_leaf_3"
                android:contentDescription="@string/details.leaf.description" />

            <ImageView
                android:layout_width="@dimen/dotted_right_width"
                android:layout_height="@dimen/dotted_right_height"
                android:layout_marginLeft="@dimen/spacing_small"
                android:src="@drawable/dotted"
                style="@style/DetailsDottedLine" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_challenge_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/challenge.description.long"
            style="@style/DetailsContentText" />

    </LinearLayout>
</ScrollView>