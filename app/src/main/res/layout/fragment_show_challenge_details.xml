<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.groep11.eva_app.ui.fragment.ShowChallengeDetailsFragment">

    <TextView android:text="@string/challenge_title_default"
        android:id="@+id/text_challenge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/challenge_description_default"
        android:id="@+id/text_challenge_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/challenge_difficulty_default"
        android:id="@+id/text_challenge_difficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
